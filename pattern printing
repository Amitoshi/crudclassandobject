Pattern 7
       *
     * * *
   * * * * *
* * * * * * *
$n=5;
for($i=1;$i<=$n;$i++){
	for($j=1;$j<=(2*$n)-1;$j++){
		if($j>=$n-($i-1) && $j<=$n+($i-1)){
			echo "*";
		}else{
			echo "& nbsp;& nbsp;";
			//remove spave between & and nbsp
		}
	}
	echo '</br>';
}
				
Pattern 8
V
V I
V I S
V I S H
V I S H A
V I S H A L
$str="VISHAL";
$count=strlen($str);
for($i=0;$i<$count;$i++){
	for($j=0;$j<=$i;$j++){
		echo " $str[$j] ";
	}
	echo '</br>';
}

				
