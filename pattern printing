V
$str="VISHAL";
$count=strlen($str);
for($i=6;$i>=0;$i--){
	for($j=0;$j<$i;$j++){
		echo " $str[$j] ";
	}
	echo '</br>';
}

				
Pattern 10
*****
*    *
*    *
*    *
*****
$n=5;
for($i=1;$i<=$n;$i++){
	for($j=1;$j<=$n;$j++){
		if($i==1 || $i==$n){
			echo "*";
		}else{
			if($j==1 || $j==$n){
				echo "*";
			}else{
				echo "& nbsp;& nbsp;";
			//remove spave between & and nbsp
			}
		}
	}
	echo '</br>';
}
				
Pattern 11
*
  *
    *
      *
        *
$n=5;
for($i=1;$i<=$n;$i++){
	for($j=1;$j<=$n;$j++){
		if($j==$i){
			echo " * ";
		}else{
			echo "& nbsp;& nbsp;& nbsp;";
			//remove spave between & and nbsp
		}
	}
	echo '</br>';
}

		
Pattern 12
*            *
   *      *  
      *      
    *     *    
*            *
$n=5;
for($i=1;$i<=$n;$i++){
	for($j=1;$j<=$n;$j++){
		if($j==$i || $i+$j==$n+1){
			echo " * ";
		}else{
			echo "& nbsp;& nbsp;& nbsp;";
			//remove spave between & and nbsp
		}
	}
	echo '</br>';
}

		
Pattern 13
        *
      * * *
   * * * * *
 * * * * * * *
   * * * * *
     * * *
       *
$n=4;

for($i=1;$i<=$n;$i++){
	for($j=1;$j<=(2*$n)-1;$j++){
		if($j>=$n-($i-1) && $j<=$n+($i-1)){
			echo "*";
		}else{
			echo "& nbsp;& nbsp;";
			//remove spave between & and nbsp
		}
	}
	echo '</br>';
}

for($i=$n-1;$i>=1;$i--){
	for($j=1;$j<=(2*$n)-1;$j++){
		if($j>=$n-($i-1) && $j<=$n+($i-1)){
			echo "*";
		}else{
			echo "& nbsp;& nbsp;";
			//remove spave between & and nbsp
		}
	}
	echo '</br>';
}

		
